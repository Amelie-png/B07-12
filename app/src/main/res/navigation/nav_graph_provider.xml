<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_provider"
    app:startDestination="@id/providerHomeFragment">

    <!-- GLOBAL ARGUMENTS (injected from MainNavActivity) -->
    <argument
        android:name="uid"
        app:argType="string" />

    <argument
        android:name="role"
        app:argType="string" />

    <!-- HOME -->
    <fragment
        android:id="@+id/providerHomeFragment"
        android:name="com.example.demoapp.ProviderHomeFragment"
        android:label="Home">
        <argument android:name="uid" app:argType="string" />
        <argument android:name="role" app:argType="string" />
    </fragment>

    <!-- SYMPTOMS -->
    <fragment
        android:id="@+id/providerSymptomFragment"
        android:name="com.example.demoapp.ProviderSymptomsFragment"
        android:label="Symptom">
        <argument android:name="uid" app:argType="string" />
        <argument android:name="role" app:argType="string" />
    </fragment>

    <!-- MEDICINE -->
    <fragment
        android:id="@+id/providerMedicineFragment"
        android:name="com.example.demoapp.ProviderMedicineFragment"
        android:label="Medicine">
        <argument android:name="uid" app:argType="string" />
        <argument android:name="role" app:argType="string" />
    </fragment>

    <!-- BADGES -->
    <fragment
        android:id="@+id/providerBadgesFragment"
        android:name="com.example.demoapp.ProviderBadgesFragment"
        android:label="Badges">
        <argument android:name="uid" app:argType="string" />
        <argument android:name="role" app:argType="string" />
    </fragment>

    <!-- PROFILE (FIXED) -->
    <fragment
        android:id="@+id/providerProfileFragment"
        android:name="com.example.demoapp.ProviderProfileFragment"
        android:label="Profile">

        <argument
            android:name="childUid"
            app:argType="string" />

        <argument
            android:name="providerUid"
            app:argType="string" />
    </fragment>

</navigation>
