<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/titleProviderChildProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child Profile"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Profile image + name + username -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/profileImageProviderChild"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_profile_placeholder"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop" />

            <!-- Name + Username stacked -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/providerChildName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Child Name"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/providerChildUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username123"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- DOB -->
        <TextView
            android:id="@+id/providerDobLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth:"
            android:textSize="16sp"
            android:textColor="#555"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/providerDobValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YYYY-MM-DD"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"/>

        <!-- Return button -->
        <Button
            android:id="@+id/returnToProviderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return to Provider Home"
            android:layout_marginTop="40dp"
            android:backgroundTint="#7755CC"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView>
