<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TRIAGE container -->
        <FrameLayout
            android:id="@+id/triageCardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- ZONE container -->
        <FrameLayout
            android:id="@+id/zoneCardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Title + Toggle Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/titleTrendChart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trend (Rescue)"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnToggleDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 Days â†’ Switch to 30 Days" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/summaryChartContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />



    </LinearLayout>

</ScrollView>
