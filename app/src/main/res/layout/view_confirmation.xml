<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Log"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_confirm_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/controller_med" />

    <TextView
        android:id="@+id/tv_confirm_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Taken at: now" />

    <!-- Input for dose count -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Puff count" />

    <EditText
        android:id="@+id/et_confirm_dose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:digits="0123456789"
        android:text="1" />

    <!-- Pre/post check info -->
    <TextView
        android:id="@+id/tv_confirm_breathing_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Breathing rating" />

    <TextView
        android:id="@+id/tv_confirm_condition_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Condition change" />

    <CheckBox
        android:id="@+id/cb_flag_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Flag as low stock" />

    <Button
        android:id="@+id/btn_confirm_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm" />
</LinearLayout>