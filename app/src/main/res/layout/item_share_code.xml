<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_share_code_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/ll_root"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 分享码卡片 -->
        <LinearLayout
            android:id="@+id/ll_header"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/purple_200"
            android:foreground="?attr/selectableItemBackground"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share Code"
                android:textSize="16sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"
                android:scrollHorizontally="false"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/tv_expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valid: 7d 0h"
                android:textSize="14sp"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- 权限开关容器，一开始隐藏 -->
        <LinearLayout
            android:id="@+id/permissions_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="8dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Share Symptoms" />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cb_symptoms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Share Medicines" android:layout_marginTop="4dp"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cb_medicines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Share PEF" android:layout_marginTop="4dp"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cb_pef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Share Triage" android:layout_marginTop="4dp"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cb_triage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Share Rescue Logs" android:layout_marginTop="4dp"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cb_rescue_logs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Share Controller Adherence" android:layout_marginTop="4dp"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cb_controller_adherence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Share Summary Charts" android:layout_marginTop="4dp"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cb_summary_charts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Revoke ShareCode" android:layout_marginTop="4dp"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/cb_revoked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
