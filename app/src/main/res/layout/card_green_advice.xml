<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:layout_margin="16dp"
    android:backgroundTint="#C8E6C9"> <!-- light green -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/textGreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You're in the GREEN Zone"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:paddingBottom="12dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/textGreenDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breathing looks stable.\nContinue normal activity.\nAvoid known triggers."
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp" />

        <!-- OK Button -->
        <Button
            android:id="@+id/btnOkGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/textGreenDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safety Note: This is guidance, not a diagnosis. If in
doubt, call emergency."
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:paddingTop="10dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
