<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <TextView android:id="@+id/tv_provider_id" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Provider ID"/>
    <CheckBox android:id="@+id/cb_symptoms" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Symptoms"/>
    <CheckBox android:id="@+id/cb_medicines" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Medicines"/>
    <CheckBox android:id="@+id/cb_pef" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="PEF"/>
    <CheckBox android:id="@+id/cb_triage" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Triage"/>
    <Button android:id="@+id/btn_revoke_provider" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Revoke"/>
</LinearLayout>