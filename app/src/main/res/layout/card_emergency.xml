<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="#D32F2F"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/emergencyTitle"
            android:text="Emergency"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/emergencyMsg"
            android:text="Your symptoms suggest severe breathing difficulty. Call emergency services immediately."
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/btnBackHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Home"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/textGreenDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safety Note: This is guidance, not a diagnosis. If in
doubt, call emergency."
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"

            android:paddingTop="10dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
