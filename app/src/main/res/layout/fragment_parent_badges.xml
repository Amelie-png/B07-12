<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- badge 1 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <ImageView
            android:id="@+id/badge1_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_badge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintDimensionRatio="1:1" />

        <ImageView
            android:id="@+id/badge1_check_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/badge1_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="first perfect controller week"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/badge1_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- badge 2 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <ImageView
            android:id="@+id/badge2_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_badge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintDimensionRatio="1:1" />

        <ImageView
            android:id="@+id/badge2_check_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintDimensionRatio="1:1" />

        <TextView
            android:id="@+id/badge2_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="10 high-quality technique sessions"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/badge2_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- badge 3 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <ImageView
            android:id="@+id/badge3_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_badge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintDimensionRatio="1:1" />

        <ImageView
            android:id="@+id/badge3_check_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintDimensionRatio="1:1" />


        <TextView
            android:id="@+id/badge3_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="low rescue month (â‰¤ threshold days / 30 days)"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/badge3_image"
            app:layout_constraintTop_toTopOf="@id/badge3_image"

            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/thresholdButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SetThreshold"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/badge3_image"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
