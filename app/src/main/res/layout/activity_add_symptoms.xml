<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBackHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"/>

        <!-- Title -->
        <TextView
            android:id="@+id/titleAddSymptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Daily Check-in Entry"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBackHome" />

        <!-- Symptoms Label -->
        <TextView
            android:id="@+id/symptomsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptoms"
            android:textColor="#666"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleAddSymptoms" />

        <!-- Select Symptoms Button -->
        <Button
            android:id="@+id/buttonSelectSymptoms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+ Select Symptoms"
            android:textColor="#FFF"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/symptomsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Display selected symptoms -->
        <TextView
            android:id="@+id/selectedSymptomsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="No symptoms selected"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/buttonSelectSymptoms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Triggers Label -->
        <TextView
            android:id="@+id/triggersLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Triggers"
            android:textColor="#666"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/selectedSymptomsText"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Select Triggers Button -->
        <Button
            android:id="@+id/buttonSelectTriggers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+ Select Triggers"
            android:textColor="#FFF"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/triggersLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Display selected triggers -->
        <TextView
            android:id="@+id/selectedTriggersText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="No triggers selected"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/buttonSelectTriggers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Add Button -->
        <Button
            android:id="@+id/buttonAddSymptoms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add Check-in Entry"
            android:textColor="#FFF"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/selectedTriggersText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
