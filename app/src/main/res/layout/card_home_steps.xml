<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:layout_margin="16dp"
    android:backgroundTint="#FFF9C4">   <!-- Light yellow -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/textYellowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You're in the YELLOW Zone"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark"
            android:paddingBottom="12dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/textYellowSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Take 2 puffs of your reliever inhaler.\n\n• Stay away from triggers.\n\n• Monitor symptoms closely.\n\n• We'll re-check in 10 minutes."
            android:textSize="16sp"
            android:paddingBottom="20dp" />

        <!-- Timer label -->
        <TextView
            android:id="@+id/textTimerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-check in"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Timer -->
        <TextView
            android:id="@+id/textTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:paddingTop="6dp" />
        <!-- Manual Re-check Button -->

        <!-- Button to end triage and return home -->
        <Button
            android:id="@+id/btnBackHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Home"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
