<?xml version="1.0" encoding="utf-8"?>
<!--
Main layout for the Home screen.
Each popup (child, parent, provider) is a ConstraintLayout that
sits centered on top of the dimmed background.
Only one popup will be visible at a time.
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreenActivity">

    <!-- Dim background-->
    <View
        android:id="@+id/dimBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <!--Child Onboarding popup -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popupChild"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <TextView
            android:id="@+id/childTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To Smart Air!"
            android:textSize="24sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <ScrollView
            android:id="@+id/childMessageScroll"
            android:layout_width="0dp"
            android:layout_height="200dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/childTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/childMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/child_popup_message"
                android:textSize="16sp"
                android:textColor="#444444"
                android:gravity="start"
                android:lineSpacingExtra="6dp" />
        </LinearLayout>
    </ScrollView>

        <Button
            android:id="@+id/closeChildPopup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Got it!"
            app:layout_constraintTop_toBottomOf="@id/childMessageScroll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Parent onboarding popup -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popupParent"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <TextView
            android:id="@+id/parentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To Smart Air!"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <ScrollView
            android:id="@+id/parentMessageScroll"
            android:layout_width="0dp"
            android:layout_height="200dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/parentTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/parentMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/parent_popup_message"
                android:textSize="16sp"
                android:textColor="#444444"
                android:gravity="start"
                android:lineSpacingExtra="6dp" />
        </LinearLayout>
    </ScrollView>



    <Button
            android:id="@+id/closeParentPopup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Got it!"
            app:layout_constraintTop_toBottomOf="@id/parentMessageScroll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Provider onboarding popup -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popupProvider"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_background"
        android:elevation="8dp"
        android:padding="24dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <TextView
            android:id="@+id/providerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To Smart Air!"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <ScrollView
            android:id="@+id/providerMessageScroll"
            android:layout_width="0dp"
            android:layout_height="200dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/providerTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/providerMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/provider_popup_message"
                android:textSize="16sp"
                android:textColor="#444444"
                android:gravity="start"
                android:lineSpacingExtra="6dp" />
        </LinearLayout>
    </ScrollView>


    <Button
            android:id="@+id/closeProviderPopup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Got it!"
            app:layout_constraintTop_toBottomOf="@id/providerMessageScroll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
