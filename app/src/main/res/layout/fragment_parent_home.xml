<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:padding="0dp">

        <!-- ðŸ”¥ TITLE: Emergency / Triage Section -->
        <TextView
            android:id="@+id/titleEmergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Emergency Check:"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- ðŸ”¥ CARD: Emergency / Triage Card (Parent Version) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="15dp"
            app:cardBackgroundColor="#D32F2F"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/emergencyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="Your child's latest triage status"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Parent cannot triage â†’ they view history -->
                <Button
                    android:id="@+id/btnViewTriageHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Triage History"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸŸ¦ ZONE FRAGMENT (same as child) -->
        <FrameLayout
            android:id="@+id/zoneFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="250dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="24dp" />

        <!-- ðŸŸª FUTURE CHART (placeholder only) -->
        <TextView
            android:id="@+id/titleChartPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Chart will be added here)"
            android:textSize="16sp"
            android:textColor="#888888"
            android:layout_marginLeft="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="4dp"/>

    </LinearLayout>

</ScrollView>
