<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- ðŸ”¥ TITLE: Emergency / Triage Section -->
    <TextView
        android:id="@+id/titleEmergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:layout_marginStart="16dp"
        android:text="Emergency Check:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- ðŸ”¥ CARD: Emergency / Triage Card (Parent Version) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEmergency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="15dp"
        app:cardBackgroundColor="#D32F2F"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/emergencyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:text="Your child's triage history"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnViewTriageHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ðŸŸ¦ ZONE FRAGMENT -->

    <!-- ðŸŸª TREND CHART SECTION -->

    <FrameLayout
        android:id="@+id/zoneFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:minHeight="250dp"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <!-- å¤–å±‚åž‚ç›´ LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- æ°´å¹³ LinearLayoutï¼šæ ‡é¢˜ + æŒ‰é’® -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/titleTrendChart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Trend (Rescue)"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnToggleDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 Days â†’ Switch to 30 Days" />

            </LinearLayout>

            <!-- å›¾è¡¨ -->
            <com.example.demoapp.charts.TrendChartView
                android:id="@+id/trendChart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="12dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
