<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true">

    <!-- 孩子头像 -->
    <ImageView
        android:id="@+id/iv_child_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_default_avatar"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:contentDescription="Child Avatar"
        android:background="@drawable/circle_background"/>

    <!-- 名字和生日 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child Name"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_child_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOB: YYYY-MM-DD"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- 编辑按钮 -->
    <ImageView
        android:id="@+id/iv_edit_child"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="Edit Child"
        android:padding="4dp"/>

    <ImageView
        android:id="@+id/iv_delete_child"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:contentDescription="Delete Child"
        android:src="@android:drawable/ic_menu_delete"/>
</LinearLayout>
