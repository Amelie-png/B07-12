<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit PEF Value"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="12dp" />

    <EditText
        android:id="@+id/inputEditPef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new PEF"
        android:inputType="number" />

    <!-- NEW: Medicine timing section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When was this measurement taken?"
        android:paddingTop="16dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/checkboxBeforeMedEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Before medicine" />

    <CheckBox
        android:id="@+id/checkboxAfterMedEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="After medicine" />

    <Button
        android:id="@+id/btnSaveEditPef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="16dp" />
    <ProgressBar
        android:id="@+id/loadingSpinner"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:visibility="gone"/>


</LinearLayout>
