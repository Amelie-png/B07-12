<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:padding="0dp"
        >
        <!-- STREAK CHIP ROW -->
        <LinearLayout
            android:id="@+id/streakChipRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="0dp"
            android:layout_marginBottom="0dp">

            <!-- MEDICATION CHIP -->
            <LinearLayout
                android:id="@+id/chipMedStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginRight="8dp"
                >

                <ImageView
                    android:id="@+id/iconChipMed"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_lightning" />

                <TextView
                    android:id="@+id/textChipMed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 days"
                    android:textSize="18sp"
                    android:paddingLeft="6dp"/>
            </LinearLayout>

            <!-- TECHNIQUE CHIP -->
            <LinearLayout
                android:id="@+id/chipTechStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="0dp"
                >

                <ImageView
                    android:id="@+id/iconChipTech"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/textChipTech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 days"
                    android:textSize="18sp"
                    android:paddingLeft="6dp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- TITLE 1: Emergency Section   -->


        <!-- CARD 1 : Emergency Section    -->
        <TextView
            android:id="@+id/titleEmergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Emergency Check:"
            android:layout_marginLeft="16dp"

            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="15dp"
            app:cardBackgroundColor="#D32F2F"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/emergencyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="Having Trouble Breathing?"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCheckTriage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click Here!"
                    android:layout_marginTop="12dp"/>
                <!-- DATE BELOW TITLE -->


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:id="@+id/zoneFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"

            android:minHeight="250dp"
            android:layout_marginBottom="24dp" />













        <!-- TITLE 3: Medication Log      -->
        <TextView
            android:id="@+id/titleMedication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Medications:"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"

            android:textStyle="bold"
            android:paddingBottom="8dp"/>


        <!-- CARD 3 : Medication Log        -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMedication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"

            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- NOTE TEXT -->
                <TextView
                    android:id="@+id/textMedNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log your daily controller and rescue usages"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:paddingBottom="12dp" />

                <!-- LOG DOSE BUTTON -->
                <Button
                    android:id="@+id/btnLogDose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log Dose" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>

</ScrollView>